<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BlueTestFragment"
        android:id="@+id/blue_layout_main">

    <Button
            android:text="Send Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blue_btn_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/blue_btn_receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="Receive Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blue_btn_receive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue_btn_send"
            app:layout_constraintStart_toStartOf="@+id/blue_btn_send"
            app:layout_constraintEnd_toEndOf="@+id/blue_btn_send" />
</androidx.constraintlayout.widget.ConstraintLayout>